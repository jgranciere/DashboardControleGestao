            "format": "double"
          },
          "idCategoria": {
            "type": "integer",
            "format": "int32"
          },
          "imagem": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "EntradaEstoqueRequestDTO": {
        "required": [
          "custoUnitario",
          "dataEntrada",
          "idIngrediente",
          "quantidadeEntrada"
        ],
        "type": "object",
        "properties": {
          "idIngrediente": {
            "type": "integer",
            "format": "int32"
          },
          "quantidadeEntrada": {
            "maximum": 999999,99,
            "minimum": 0,01,
            "type": "number",
            "format": "double"
          },
          "custoUnitario": {
            "maximum": 999999,99,
            "minimum": 0,01,
            "type": "number",
            "format": "double"
          },
          "dataEntrada": {
            "type": "string",
            "format": "date-time"
          },
          "dataValidade": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "EntradaSaidaDTO": {
        "required": [
          "produtoId",
          "quantidade",
          "tipo",
          "unidadeMedida"
        ],
        "type": "object",
        "properties": {
          "produtoId": {
            "type": "integer",
            "format": "int32"
          },
          "quantidade": {
            "type": "number",
            "format": "double"
          },
          "tipo": {
            "minLength": 1,
            "pattern": "entrada|saida",
            "type": "string"
          },
          "unidadeMedida": {
            "$ref": "#/components/schemas/UnidadeMedida"
          }
        },
        "additionalProperties": false
      },
      "IngredienteDTO": {
        "required": [
          "nome",
          "unidadeMedida"
        ],
        "type": "object",
        "properties": {
          "nome": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "unidadeMedida": {
            "maxLength": 10,
            "minLength": 0,
            "type": "string"
          },
          "estoqueMinimo": {
            "maximum": 999999,99,
            "minimum": 0,
            "type": "number",
            "format": "double"
          },
          "fornecedorPadrao": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "IngredienteResponseDTO": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "nome": {
            "type": "string",
            "nullable": true
          },
          "unidadeMedida": {
            "type": "string",
            "nullable": true
          },
          "quantidadeEstoque": {
            "type": "number",
            "format": "double"
          },
          "custoMedio": {
            "type": "number",
            "format": "double"
          },
          "estoqueMinimo": {
            "type": "number",
            "format": "double"
          },
          "fornecedorPadrao": {
            "type": "string",
            "nullable": true
          },
          "dataValidadeProxima": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "dataUltimaAtualizacao": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "ReceitaDTO": {
        "required": [
          "nome",
          "produtoId"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "nome": {
            "minLength": 1,
            "type": "string"
          },
          "produtoId": {
            "type": "integer",
            "format": "int32"
          },
          "itens": {
            "minItems": 1,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ReceitaItemDTO"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ReceitaItemDTO": {
        "type": "object",
        "properties": {
          "ingredienteId": {
            "type": "integer",
            "format": "int32"
          },
          "quantidade": {
            "minimum": 0,1,
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "UnidadeMedida": {
        "enum": [
          0,
          1,
          2,
          3,
          4
        ],
        "type": "integer",
        "format": "int32"
      }
    }
  }
